    { "name": "tbx-test-ninja-debug", "displayName": "Test Ninja (Debug)", "configurePreset": "tbx-ninja", "configuration": "Debug", "output": { "outputOnFailure": true } },
    { "name": "tbx-test-ninja-release", "displayName": "Test Ninja (Release)", "configurePreset": "tbx-ninja", "configuration": "Release", "output": { "outputOnFailure": true } }
  ]
