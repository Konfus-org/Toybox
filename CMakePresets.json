{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23
  },
  "configurePresets": [
    {
      "name": "vs2022-x64-base",
      "displayName": "VS 2022 x64 (base)",
      "generator": "Visual Studio 17 2022",
      "architecture": { "value": "x64" },
      "binaryDir": "${sourceDir}/_vs2022",
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/_build/bin/$<CONFIG>",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/_build/lib/$<CONFIG>",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/_build/lib/$<CONFIG>"
      },
      "hidden": true
    },
    {
      "name": "tbx-vs",
      "displayName": "Toybox (VS2022)",
      "inherits": "vs2022-x64-base",
      "cacheVariables": {
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "tbx-vs-debug",
      "displayName": "Debug",
      "configurePreset": "tbx-vs",
      "configuration": "Debug"
    },
    {
      "name": "tbx-vs-release",
      "displayName": "Release",
      "configurePreset": "tbx-vs",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "tbx-test-debug",
      "displayName": "CTest (Debug)",
      "configurePreset": "tbx-vs",
      "configuration": "Debug",
      "output": { "outputOnFailure": true }
    },
    {
      "name": "tbx-test-release",
      "displayName": "CTest (Release)",
      "configurePreset": "tbx-vs",
      "configuration": "Release",
      "output": { "outputOnFailure": true }
    }
  ]
}