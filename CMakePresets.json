{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23
  },
  "configurePresets": [
    {
      "name": "vs2022-base",
      "displayName": "VS 2022 (base)",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/cmake/build/vs",
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/cmake/build/bin/$<CONFIG>",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/cmake/build/lib/$<CONFIG>",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/cmake/build/lib/$<CONFIG>",
        "CMAKE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/cmake/build/pdb/$<CONFIG>",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
      },
      "hidden": true
    },
    {
      "name": "tbx-vs",
      "displayName": "Toybox (VS2022)",
      "inherits": "vs2022-base"
    },
    {
      "name": "ninja-base",
      "displayName": "Ninja (base)",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/cmake/build/ninja",
      "cacheVariables": {
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/cmake/build/bin/$<CONFIG>",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/cmake/build/lib/$<CONFIG>",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/cmake/build/lib/$<CONFIG>",
        "CMAKE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/cmake/build/pdb/$<CONFIG>",
        "CMAKE_CONFIGURATION_TYPES": "Debug;Release"
      },
      "hidden": true
    },
    {
      "name": "tbx-ninja",
      "displayName": "Toybox (Ninja)",
      "inherits": "ninja-base"
    }
  ],
  "buildPresets": [
    { "name": "tbx-vs-debug", "displayName": "VS (Debug)", "configurePreset": "tbx-vs", "configuration": "Debug" },
    { "name": "tbx-vs-release", "displayName": "VS (Release)", "configurePreset": "tbx-vs", "configuration": "Release" },
    { "name": "tbx-ninja-debug", "displayName": "Ninja (Debug)", "configurePreset": "tbx-ninja", "configuration": "Debug" },
    { "name": "tbx-ninja-release", "displayName": "Ninja (Release)", "configurePreset": "tbx-ninja", "configuration": "Release" }
  ],
  "testPresets": [
    { "name": "tbx-test-vs-debug", "displayName": "Test VS (Debug)", "configurePreset": "tbx-vs", "configuration": "Debug", "output": { "outputOnFailure": true } },
    { "name": "tbx-test-vs-release", "displayName": "Test VS (Release)", "configurePreset": "tbx-vs", "configuration": "Release", "output": { "outputOnFailure": true } },
    { "name": "tbx-test-ninja-debug", "displayName": "Test Ninja (Debug)", "configurePreset": "tbx-ninja", "configuration": "Debug", "output": { "outputOnFailure": true } },
    { "name": "tbx-test-ninja-release", "displayName": "Test Ninja (Release)", "configurePreset": "tbx-ninja", "configuration": "Release", "output": { "outputOnFailure": true } }
  ]
}
