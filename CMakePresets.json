{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 4,
    "minor": 1,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "tbx-base",
      "cacheVariables": {
        "TBX_PLUGIN_ABI_VERSION": "1",
        "TBX_ENABLE_ASSERTS": "ON",
        "CTEST_TEST_TIMEOUT": "120",
        "CMAKE_PROJECT_TOP_LEVEL_INCLUDES": "${sourceDir}/cmake/TbxPresetCompileDefinitions.cmake;${sourceDir}/cmake/TbxPresetMsvcOptions.cmake"
      },
      "hidden": true
    },
    {
      "name": "ninja-base",
      "displayName": "Ninja (base)",
      "generator": "Ninja Multi-Config",
      "binaryDir": "${sourceDir}/build/ninja",
      "inherits": "tbx-base",
      "cacheVariables": {
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/ninja/lib",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/ninja/lib",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/ninja/bin",
        "CMAKE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/build/ninja/pdb",
        "CMAKE_COMPILE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/build/ninja/pdb"
      },
      "hidden": true
    },
    {
      "name": "vs-base",
      "binaryDir": "${sourceDir}/build/vs",
      "inherits": "tbx-base",
      "cacheVariables": {
        "CMAKE_MSVC_DEBUG_INFORMATION_FORMAT": "Embedded",
        "CMAKE_EXE_LINKER_FLAGS_DEBUG": "/DEBUG:FULL /INCREMENTAL",
        "CMAKE_SHARED_LINKER_FLAGS_DEBUG": "/DEBUG:FULL /INCREMENTAL",
        "CMAKE_MODULE_LINKER_FLAGS_DEBUG": "/DEBUG:FULL /INCREMENTAL",
        "CMAKE_ARCHIVE_OUTPUT_DIRECTORY": "${sourceDir}/build/vs/lib",
        "CMAKE_LIBRARY_OUTPUT_DIRECTORY": "${sourceDir}/build/vs/lib",
        "CMAKE_RUNTIME_OUTPUT_DIRECTORY": "${sourceDir}/build/vs/bin",
        "CMAKE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/build/vs/pdb",
        "CMAKE_COMPILE_PDB_OUTPUT_DIRECTORY": "${sourceDir}/build/vs/pdb"
      },
      "hidden": true
    },
    {
      "name": "tbx-vs-26",
      "displayName": "Toybox (VS2026)",
      "generator": "Visual Studio 18 2026",
      "inherits": "vs-base"
    },
    {
      "name": "tbx-ninja",
      "displayName": "Toybox (Ninja)",
      "inherits": "ninja-base"
    }
  ],
  "buildPresets": [
    {
      "name": "tbx-vs26-debug",
      "displayName": "MSVC (Debug)",
      "configurePreset": "tbx-vs-26",
      "configuration": "Debug"
    },
    {
      "name": "tbx-vs26-release",
      "displayName": "MSVC (Release)",
      "configurePreset": "tbx-vs-26",
      "configuration": "Release"
    },
    {
      "name": "tbx-ninja-debug",
      "displayName": "Ninja (Debug)",
      "configurePreset": "tbx-ninja",
      "configuration": "Debug"
    },
    {
      "name": "tbx-ninja-release",
      "displayName": "Ninja (Release)",
      "configurePreset": "tbx-ninja",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "tbx-test-vs26-debug",
      "displayName": "Test VS26 (Debug)",
      "configurePreset": "tbx-vs-26",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "timeout": 120
      }
    },
    {
      "name": "tbx-test-vs26-release",
      "displayName": "Test VS26 (Release)",
      "configurePreset": "tbx-vs-26",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "timeout": 120
      }
    },
    {
      "name": "tbx-test-ninja-debug",
      "displayName": "Test Ninja (Debug)",
      "configurePreset": "tbx-ninja",
      "configuration": "Debug",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "timeout": 120
      }
    },
    {
      "name": "tbx-test-ninja-release",
      "displayName": "Test Ninja (Release)",
      "configurePreset": "tbx-ninja",
      "configuration": "Release",
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "timeout": 120
      }
    }
  ]
}
